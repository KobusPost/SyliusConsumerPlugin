<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sylake_sylius_consumer.projector.product_slug_generator" class="Sylake\SyliusConsumerPlugin\Projector\ProductSlugGenerator">
            <argument type="service" id="sylius.generator.slug" />
        </service>
        <service id="sylake_sylius_consumer.repository.akeneo_attribute_option" class="Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service">
                <service class="Doctrine\ORM\Mapping\ClassMetadata">
                    <factory service="doctrine.orm.default_entity_manager" method="getClassMetadata" />
                    <argument>Sylake\SyliusConsumerPlugin\Entity\AkeneoAttributeOption</argument>
                </service>
            </argument>
        </service>
        <service id="sylake_sylius_consumer.repository.akeneo_family" class="Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service">
                <service class="Doctrine\ORM\Mapping\ClassMetadata">
                    <factory service="doctrine.orm.default_entity_manager" method="getClassMetadata" />
                    <argument>Sylake\SyliusConsumerPlugin\Entity\AkeneoFamily</argument>
                </service>
            </argument>
        </service>
        <service id="sylake_sylius_consumer.repository.akeneo_group" class="Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service">
                <service class="Doctrine\ORM\Mapping\ClassMetadata">
                    <factory service="doctrine.orm.default_entity_manager" method="getClassMetadata" />
                    <argument>Sylake\SyliusConsumerPlugin\Entity\AkeneoGroup</argument>
                </service>
            </argument>
        </service>
        <service id="sylake_sylius_consumer.attribute.attribute_option_resolver" class="Sylake\SyliusConsumerPlugin\Attribute\AttributeOptionResolver">
            <argument type="service" id="sylake_sylius_consumer.repository.akeneo_attribute_option" />
        </service>
        <service id="sylake_sylius_consumer.attribute.attribute_value_provider" class="Sylake\SyliusConsumerPlugin\Attribute\AttributeValueProvider">
            <argument type="service" id="sylius.factory.product_attribute_value" />
            <argument type="service" id="sylius.repository.product_attribute" />
            <argument type="service" id="sylius.repository.product_attribute_value" />
        </service>
        <service id="sylake_sylius_consumer.attribute.attribute_processor" class="Sylake\SyliusConsumerPlugin\Attribute\CompositeAttributeProcessor">
            <argument type="service">
                <service class="Sylake\SyliusConsumerPlugin\Attribute\NameAttributeProcessor">
                    <argument>%sylake_sylius_consumer.denormalizer.product.name_attribute%</argument>
                </service>
            </argument>
            <argument type="service">
                <service class="Sylake\SyliusConsumerPlugin\Attribute\DescriptionAttributeProcessor">
                    <argument>%sylake_sylius_consumer.denormalizer.product.description_attribute%</argument>
                </service>
            </argument>
            <argument type="service">
                <service class="Sylake\SyliusConsumerPlugin\Attribute\ChannelAttributeProcessor">
                    <argument type="service" id="sylius.repository.channel" />
                    <argument type="service" id="sylius.repository.currency" />
                    <argument>%sylake_sylius_consumer.denormalizer.product.price_attribute%</argument>
                </service>
            </argument>
            <argument type="service">
                <service class="Sylake\SyliusConsumerPlugin\Attribute\ChannelPricingAttributeProcessor">
                    <argument type="service" id="sylius.factory.channel_pricing" />
                    <argument type="service" id="sylius.repository.channel" />
                    <argument type="service" id="sylius.repository.currency" />
                    <argument type="service" id="sylius.repository.channel_pricing" />
                    <argument>%sylake_sylius_consumer.denormalizer.product.price_attribute%</argument>
                </service>
            </argument>
            <argument type="service">
                <service class="Sylake\SyliusConsumerPlugin\Attribute\ImageAttributeProcessor">
                    <argument type="service" id="sylius.factory.product_image" />
                    <argument type="service" id="sylius.repository.product_image" />
                    <argument>%sylake_sylius_consumer.denormalizer.product.image_attribute%</argument>
                </service>
            </argument>
            <argument type="service">
                <service class="Sylake\SyliusConsumerPlugin\Attribute\UnitAttributeProcessor">
                    <argument type="service" id="sylake_sylius_consumer.attribute.attribute_value_provider" />
                </service>
            </argument>
            <argument type="service">
                <service class="Sylake\SyliusConsumerPlugin\Attribute\StringCollectionAttributeProcessor">
                    <argument type="service" id="sylake_sylius_consumer.attribute.attribute_value_provider" />
                    <argument type="service" id="sylake_sylius_consumer.attribute.attribute_option_resolver" />
                </service>
            </argument>
            <argument type="service">
                <service class="Sylake\SyliusConsumerPlugin\Attribute\DateAttributeProcessor">
                    <argument type="service" id="sylake_sylius_consumer.attribute.attribute_value_provider" />
                </service>
            </argument>
            <argument type="service">
                <service class="Sylake\SyliusConsumerPlugin\Attribute\ScalarAttributeProcessor">
                    <argument type="service" id="sylake_sylius_consumer.attribute.attribute_value_provider" />
                    <argument type="service" id="sylake_sylius_consumer.attribute.attribute_option_resolver" />
                </service>
            </argument>
        </service>

        <service class="Sylake\SyliusConsumerPlugin\Projector\AttributeProjector">
            <argument type="service" id="sylius.factory.product_attribute" />
            <argument type="service" id="sylius.repository.product_attribute" />
            <argument type="service" id="sylius.registry.attribute_type" />
            <argument type="service" id="monolog.logger" />
            <tag name="event_subscriber" subscribes_to="Sylake\SyliusConsumerPlugin\Event\AttributeUpdated" method="__invoke" />
        </service>
        <service class="Sylake\SyliusConsumerPlugin\Projector\AttributeOptionProjector">
            <argument type="service" id="sylake_sylius_consumer.repository.akeneo_attribute_option" />
            <argument type="service" id="monolog.logger" />
            <tag name="event_subscriber" subscribes_to="Sylake\SyliusConsumerPlugin\Event\AttributeOptionUpdated" method="__invoke" />
        </service>
        <service class="Sylake\SyliusConsumerPlugin\Projector\AssociationTypeProjector">
            <argument type="service" id="sylius.factory.product_association_type" />
            <argument type="service" id="sylius.repository.product_association_type" />
            <argument type="service" id="monolog.logger" />
            <tag name="event_subscriber" subscribes_to="Sylake\SyliusConsumerPlugin\Event\AssociationTypeUpdated" method="__invoke" />
        </service>
        <service class="Sylake\SyliusConsumerPlugin\Projector\FamilyProjector">
            <argument type="service" id="sylake_sylius_consumer.repository.akeneo_family" />
            <argument type="service" id="monolog.logger" />
            <tag name="event_subscriber" subscribes_to="Sylake\SyliusConsumerPlugin\Event\FamilyUpdated" method="__invoke" />
        </service>
        <service class="Sylake\SyliusConsumerPlugin\Projector\GroupProjector">
            <argument type="service" id="sylake_sylius_consumer.repository.akeneo_group" />
            <argument type="service" id="monolog.logger" />
            <tag name="event_subscriber" subscribes_to="Sylake\SyliusConsumerPlugin\Event\GroupUpdated" method="__invoke" />
        </service>
        <service class="Sylake\SyliusConsumerPlugin\Projector\ProductProjector">
            <argument type="service" id="sylius.factory.product" />
            <argument type="service" id="sylius.factory.product_taxon" />
            <argument type="service" id="sylius.factory.product_association" />
            <argument type="service" id="sylake_sylius_consumer.projector.product_slug_generator" />
            <argument type="service" id="sylius.repository.product" />
            <argument type="service" id="sylius.repository.product_taxon" />
            <argument type="service" id="sylius.repository.taxon" />
            <argument type="service" id="sylius.repository.product_association_type" />
            <argument type="service" id="sylius.repository.product_association" />
            <argument type="service" id="sylius.repository.locale" />
            <argument type="service" id="sylake_sylius_consumer.attribute.attribute_processor" />
            <argument type="service" id="monolog.logger" />
            <tag name="event_subscriber" subscribes_to="Sylake\SyliusConsumerPlugin\Event\ProductUpdated" method="__invoke" />
        </service>
        <service class="Sylake\SyliusConsumerPlugin\Projector\TaxonProjector">
            <argument type="service" id="sylius.factory.taxon" />
            <argument type="service" id="sylius.repository.taxon" />
            <argument type="service" id="sylius.generator.taxon_slug" />
            <argument type="service" id="monolog.logger" />
            <tag name="event_subscriber" subscribes_to="Sylake\SyliusConsumerPlugin\Event\TaxonUpdated" method="__invoke" />
        </service>

        <service class="Sylake\SyliusConsumerPlugin\Denormalizer\AttributeUpdatedDenormalizer">
            <tag name="rabbitmq_simplebus.amqp_denormalizer" />
        </service>
        <service class="Sylake\SyliusConsumerPlugin\Denormalizer\AttributeOptionUpdatedDenormalizer">
            <tag name="rabbitmq_simplebus.amqp_denormalizer" />
        </service>
        <service class="Sylake\SyliusConsumerPlugin\Denormalizer\AssociationTypeUpdatedDenormalizer">
            <tag name="rabbitmq_simplebus.amqp_denormalizer" />
        </service>
        <service class="Sylake\SyliusConsumerPlugin\Denormalizer\FamilyUpdatedDenormalizer">
            <tag name="rabbitmq_simplebus.amqp_denormalizer" />
        </service>
        <service class="Sylake\SyliusConsumerPlugin\Denormalizer\GroupUpdatedDenormalizer">
            <tag name="rabbitmq_simplebus.amqp_denormalizer" />
        </service>
        <service class="Sylake\SyliusConsumerPlugin\Denormalizer\ProductUpdatedDenormalizer">
            <tag name="rabbitmq_simplebus.amqp_denormalizer" />
        </service>
        <service class="Sylake\SyliusConsumerPlugin\Denormalizer\TaxonUpdatedDenormalizer">
            <tag name="rabbitmq_simplebus.amqp_denormalizer" />
        </service>
    </services>
</container>

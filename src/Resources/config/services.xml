<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sylake_rabbitmqakeneo.projector.association_type" class="Sylake\RabbitmqAkeneo\Projector\AssociationTypeProjector">
            <argument type="service" id="sylius.factory.product_association_type" />
            <argument type="service" id="sylius.repository.product_association_type" />
            <tag name="event_subscriber" subscribes_to="Sylake\RabbitmqAkeneo\Event\AssociationTypeCreated" method="handleAssociationTypeCreated" />
        </service>
        <service id="sylake_rabbitmqakeneo.projector.product" class="Sylake\RabbitmqAkeneo\Projector\ProductProjector">
            <argument type="service" id="sylius.factory.taxon" />
            <argument type="service" id="sylius.factory.product_association" />
            <argument type="service" id="sylius.factory.channel_pricing" />
            <argument type="service" id="sylius.factory.product_attribute" />
            <argument type="service" id="sylius.factory.product" />
            <argument type="service" id="sylius.repository.taxon" />
            <argument type="service" id="sylius.repository.product_association" />
            <argument type="service" id="sylius.repository.channel_pricing" />
            <argument type="service" id="sylius.repository.product_attribute" />
            <argument type="service" id="sylius.repository.product" />
            <tag name="event_subscriber" subscribes_to="Sylake\RabbitmqAkeneo\Event\ProductCreated" method="handleProductCreated" />
        </service>
        <service id="sylake_rabbitmqakeneo.projector.taxon" class="Sylake\RabbitmqAkeneo\Projector\TaxonProjector">
            <argument type="service" id="sylius.factory.taxon" />
            <argument type="service" id="sylius.repository.taxon" />
            <tag name="event_subscriber" subscribes_to="Sylake\RabbitmqAkeneo\Event\TaxonCreated" method="handleTaxonCreated" />
        </service>

        <service id="sylake_rabbitmqakeneo.denormalizer.association_type" class="Sylake\RabbitmqAkeneo\Denormalizer\AssociationTypeCreatedDenormalizer">
            <tag name="rabbitmq_simplebus.amqp_denormalizer" />
        </service>
        <service id="sylake_rabbitmqakeneo.denormalizer.product" class="Sylake\RabbitmqAkeneo\Denormalizer\ProductCreatedDenormalizer">
            <tag name="rabbitmq_simplebus.amqp_denormalizer" />
        </service>
        <service id="sylake_rabbitmqakeneo.denormalizer.taxon" class="Sylake\RabbitmqAkeneo\Denormalizer\TaxonCreatedDenormalizer">
            <tag name="rabbitmq_simplebus.amqp_denormalizer" />
        </service>
    </services>
</container>
